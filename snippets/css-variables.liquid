{% style %}
  :root {
    --page-width: {{ settings.max_page_width }};
    --page-margin: {{ settings.min_page_margin }}px;
    --color-background-default: {{ settings.background_default }};
    --color-foreground-default: {{ settings.foreground_default }};
    --color-background-green: {{ settings.background_green }};
    --color-foreground-green: {{ settings.foreground_green }};
    --color-background-pink: {{ settings.background_pink }};
    --color-foreground-pink: {{ settings.foreground_pink }};
    --color-background-blue: {{ settings.background_blue }};
    --color-foreground-blue: {{ settings.foreground_blue }};
    --color-gradient1: {{ settings.gradient1 }};
    --style-border-radius-inputs: {{ settings.input_corner_radius }}px;
  }
{% endstyle %}
