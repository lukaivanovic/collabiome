{% comment %}
  This section is used in the blog template to render the blog page listing all
  articles within a blog.

  https://shopify.dev/docs/storefronts/themes/architecture/templates/blog
{% endcomment %}

<div class="container max-w-4xl py-8">
  <h1 class="text-4xl font-bold mb-8">{{ blog.title }}</h1>

  {% paginate blog.articles by 5 %}
    <div class="space-y-8 mb-8">
      {% for article in blog.articles %}
        <article class="bg-white rounded-lg shadow-sm overflow-hidden">
          {% if article.image %}
            <div class="aspect-video overflow-hidden">
              {{ article.image | image_url: width: 1000 | image_tag: class: 'w-full h-full object-cover' }}
            </div>
          {% endif %}
          <div class="p-6">
            <h2 class="text-2xl font-bold mb-2">
              {{ article.title | link_to: article.url, class: 'hover:text-gray-600' }}
            </h2>
            {% assign date = article.published_at | time_tag: format: 'date' %}
            <p class="text-sm text-gray-500 mb-4">{{ 'blog.article_metadata_html' | t: date: date, author: article.author }}</p>
            <p class="text-gray-700">{{ article.excerpt }}</p>
          </div>
        </article>
      {% endfor %}
    </div>

    {%- if paginate.pages > 1 -%}
      {{- paginate | default_pagination -}}
    {%- endif -%}
  {% endpaginate %}
</div>

{% schema %}
{
  "name": "t:general.blog",
  "settings": []
}
{% endschema %}
