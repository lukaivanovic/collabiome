<header class="site-header full-width">
  <div class="site-header__top">
    <div class="site-header__spacer" aria-hidden="true"></div>
    <div class="site-header__logo">
      <a href="{{ routes.root_url }}" aria-label="{{ shop.name | escape }}">Logo</a>
    </div>
    <div class="site-header__icons" aria-label="Header actions">
      <a href="#" aria-label="Search">[Search]</a>
      <a href="#" aria-label="User">[User]</a>
      <a href="{{ routes.cart_url }}" aria-label="Cart">[Cart]</a>
    </div>
  </div>

  <nav class="site-header__nav" aria-label="Primary">
    <ul class="site-header__menu">
      {% if section.settings.menu and section.settings.menu.links.size > 0 %}
        {% for link in section.settings.menu.links %}
          <li><a href="{{ link.url }}">{{ link.title }}</a></li>
        {% endfor %}
      {% else %}
        <li><a href="{{ routes.root_url }}">{{ 'navigation.home' | t }}</a></li>
        <li><a href="{{ routes.all_products_collection_url }}">{{ 'navigation.shop' | t }}</a></li>
        <li><a href="/pages/about">{{ 'navigation.about' | t }}</a></li>
        <li><a href="/pages/contact">{{ 'navigation.contact' | t }}</a></li>
      {% endif %}
    </ul>
  </nav>
</header>

{% stylesheet %}
  .site-header {
    position: sticky;
    top: 0;
    z-index: 1000;
    background: var(--color-background);
    border-bottom: 1px solid rgb(0 0 0 / 0.06);
    width: 100%;
  }

  .site-header a {
    text-decoration: none;
    color: var(--color-foreground);
  }

  .site-header__top {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    align-items: center;
    gap: 1rem;
    min-height: 56px;
    padding: 0 1rem;
  }

  .site-header__logo {
    justify-self: center;
    font-weight: 600;
    letter-spacing: 0.02em;
  }

  .site-header__icons {
    justify-self: end;
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .site-header__nav {
    display: flex;
    justify-content: center;
    border-top: 1px solid rgb(0 0 0 / 0.04);
    padding: 0.5rem 0.75rem;
  }

  .site-header__menu {
    list-style: none;
    display: flex;
    gap: 1.25rem;
    margin: 0;
    padding: 0;
  }

  .site-header__menu a {
    color: var(--color-foreground);
  }
{% endstylesheet %}

{% schema %}
{
  "name": "t:general.header",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "label": "t:labels.menu"
    }
  ]
}
{% endschema %}
