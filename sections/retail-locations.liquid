{% liquid
  assign section_id = section.settings.custom_id | default: section.id
  assign retailers_list = section.settings.retailers | default: []
  assign large_retailers = retailers_list | where: 'importance', 'large'
  assign default_retailers = retailers_list | reject: 'importance', 'large'
%}

<section id="{{ section_id }}" class="retail-locations py-16">
  <div class="container mx-auto px-4">
    {% if section.settings.heading != blank %}
      <div class="max-w-4xl">
        <h2 class="text-3xl font-semibold tracking-tight text-slate-900">{{ section.settings.heading }}</h2>
        {% if section.settings.description != blank %}
          <p class="mt-3 text-base text-slate-600">{{ section.settings.description }}</p>
        {% endif %}
      </div>
    {% endif %}

    {% if large_retailers.size > 0 %}
      <div class="mt-12 grid gap-6 lg:grid-cols-3">
        {% for retailer in large_retailers %}
          {% assign retailer_link = retailer.link | default: '#' %}
          <a href="{{ retailer_link }}" class="group flex h-full flex-col rounded-[32px] border border-slate-200 bg-white p-6 transition hover:shadow-lg">
            {% if retailer.image %}
              <div class="aspect-[4/3] w-full overflow-hidden rounded-[28px] bg-slate-100">
                <img
                  src="{{ retailer.image | image_url: width: 900, height: 675, crop: center }}"
                  alt="{{ retailer.name | escape }}"
                  loading="lazy"
                  class="h-full w-full object-cover transition duration-300 group-hover:scale-105"
                />
              </div>
            {% else %}
              <div class="aspect-[4/3] w-full rounded-[28px] bg-slate-100"></div>
            {% endif %}

            <div class="mt-6">
              {% if retailer.name != blank %}
                <h3 class="text-xl font-semibold text-slate-900">{{ retailer.name }}</h3>
              {% endif %}
              {% if retailer.desc != blank %}
                <p class="mt-2 text-sm text-slate-600">{{ retailer.desc }}</p>
              {% endif %}
            </div>
          </a>
        {% endfor %}
      </div>
    {% endif %}

    {% if default_retailers.size > 0 %}
      <div class="mt-12 grid grid-cols-2 gap-4 sm:grid-cols-3 lg:grid-cols-5">
        {% for retailer in default_retailers %}
          <a href="{{ retailer.link | default: '#' }}" class="group flex flex-col overflow-hidden rounded-2xl border border-slate-200 bg-white p-4 text-left transition hover:border-slate-900">
            {% if retailer.image %}
              <div class="h-32 w-full overflow-hidden rounded-2xl bg-slate-100">
                <img
                  src="{{ retailer.image | image_url: width: 400, height: 320, crop: center }}"
                  alt="{{ retailer.name | escape }}"
                  loading="lazy"
                  class="h-full w-full object-cover transition duration-300 group-hover:scale-105"
                />
              </div>
            {% else %}
              <div class="h-32 w-full rounded-2xl bg-slate-100"></div>
            {% endif %}
            {% if retailer.name != blank %}
              <h3 class="mt-3 text-sm font-semibold text-slate-900">{{ retailer.name }}</h3>
            {% endif %}
            {% if retailer.desc != blank %}
              <p class="mt-1 text-xs text-slate-500">{{ retailer.desc }}</p>
            {% endif %}
          </a>
        {% endfor %}
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Retail locations",
  "tag": "section",
  "class": "retail-locations",
  "settings": [
    {
      "type": "text",
      "id": "custom_id",
      "label": "Section ID",
      "info": "Optional anchor ID for this block."
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": ""
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": ""
    },
    {
      "type": "metaobject_list",
      "id": "retailers",
      "label": "Retailers",
      "object_type": "retailers"
    }
  ],
  "presets": [
    {
      "name": "Retail locations"
    }
  ]
}
{% endschema %}

