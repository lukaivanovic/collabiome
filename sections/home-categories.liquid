{% liquid
  assign section_id = section.settings.custom_id | default: section.id
%}

<div class="home-categories container">
  {% if section.settings.title != blank %}
    <h2 class="text-xl uppercase">{{ section.settings.title | escape }}</h2>
  {% endif %}
  <div class="home-categories__grid">
    {% for block in section.blocks %}
      <article class="home-categories__card" {{ block.shopify_attributes }}>
        {% if block.settings.image != blank %}
          {% assign bg = block.settings.image | image_url: width: 1200 %}
          <div class="home-categories__media" style="background-image: url('{{ bg }}');"></div>
        {% else %}
          <div class="home-categories__media home-categories__media--placeholder"></div>
        {% endif %}
        <div class="home-categories__overlay"></div>
        <div class="home-categories__content">
          {% if block.settings.title != blank %}
            <h3 class="text-2xl uppercase font-medium">{{ block.settings.title | escape }}</h3>
          {% endif %}
          {% if block.settings.description != blank %}
            <p class="home-categories__description">{{ block.settings.description | escape }}</p>
          {% endif %}
        </div>
      </article>
    {% else %}
      <article class="home-categories__card">
        <div class="home-categories__media home-categories__media--placeholder"></div>
        <div class="home-categories__overlay"></div>
        <div class="home-categories__content">
          <h3 class="home-categories__title">{{ 'sections.home_categories.default_card_title' | t }}</h3>
          <p class="home-categories__description">{{ 'sections.home_categories.default_card_description' | t }}</p>
        </div>
      </article>
    {% endfor %}
  </div>
</div>

{% stylesheet %}
  .home-categories {
    position: relative;
    padding-top: 120px;
    padding-bottom: 120px;
  }

  .home-categories__grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1rem;
    margin-top: 3rem;
  }

  @media (max-width: 600px) {
    .home-categories__grid {
      grid-template-columns: 1fr;
    }
  }

  .home-categories__card {
    position: relative;
    aspect-ratio: 4 / 5;
    overflow: clip;
    border-radius: var(--style-border-radius-cards, 12px);
    background: var(--color-card, #f4f4f4);
  }

  .home-categories__media {
    position: absolute;
    inset: 0;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
  }

  .home-categories__media--placeholder {
    background: linear-gradient(180deg, rgb(0 0 0 / 0.04), rgb(0 0 0 / 0.12));
  }

  .home-categories__overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(180deg, rgba(0, 0, 0, 0) 40%, rgba(0, 0, 0, 0.55) 100%);
    pointer-events: none;
  }

  .home-categories__content {
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    padding: 1.5rem;
    color: #fff;
    display: grid;
    gap: 0.25rem;
  }

  .home-categories__card .home-categories__title {
    margin: 0;
    font-size: 1.125rem;
    line-height: 1.2;
    font-weight: 700;
  }

  .home-categories__description {
    margin: 0;
    font-size: 0.9375rem;
    opacity: 0.95;
  }
{% endstylesheet %}

