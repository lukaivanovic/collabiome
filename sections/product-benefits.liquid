{%- liquid
  assign benefits = product.metafields.custom.benefits.value
  assign benefits_image = product.metafields.custom.benefits_image.value
  assign benefits_title = product.metafields.custom.benefits_title.value
  assign benefits_description = product.metafields.custom.benefits_description.value
-%}

<div class="container py-30">
  <div class="bg-blue grid grid-cols-2 gap-10 rounded-3xl overflow-hidden p-8">
    {% if benefits_image %}
      <div class="mb-12">
        {% render 'image', image: benefits_image, class: 'rounded-3xl w-full' %}
      </div>
    {% endif %}

    <div class="flex flex-col justify-center">
      <div class=" mb-12">
        <h2 class="text-4xl uppercase font-medium">{{ benefits_title | default: 'Product Benefits' }}</h2>

        {% if benefits_description %}
          <p class="text-base opacity-70 mt-2">{{ benefits_description }}</p>
        {% endif %}
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {% for benefit in benefits %}
          <div class="flex items-start gap-4">
            {% if benefit.icon %}
              <div class="flex-shrink-0">
                {% render 'image', image: benefit.icon, class: 'size-4 [&>img]:size-4' %}
              </div>
            {% else %}
              <div class="flex-shrink-0 w-8 h-8 bg-blue-600 rounded-full flex items-center justify-center">
                <div class="w-4 h-4 bg-white rounded-full"></div>
              </div>
            {% endif %}

            <div class="flex-1">
              {% if benefit.title %}
                <h3 class="font-semibold text-lg mb-2">{{ benefit.title }}</h3>
              {% endif %}

              {% if benefit.description %}
                <p class="text-sm opacity-70">{{ benefit.description }}</p>
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Product Benefits",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    }
  ],
  "presets": [
    {
      "name": "Product Benefits",
      "category": "Product"
    }
  ]
}
{% endschema %}
