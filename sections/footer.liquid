<footer>
  <div class="footer__top container">
    <div class="footer__left">
      <div class="footer__logo">
        <a href="{{ routes.root_url }}" aria-label="{{ shop.name | escape }}">
          <img src="{{ 'logo.svg' | file_url }}" height="64" width="auto">
        </a>
      </div>
      <div class="footer__menus">
        <div class="footer__menu">
          {% if section.settings.menu1_title != blank %}
            <h4 class="text-base font-medium uppercase text-secondary">{{ section.settings.menu1_title | escape }}</h4>
          {% endif %}
          {% if section.settings.menu1 and section.settings.menu1.links.size > 0 %}
            <ul class="footer__menu-list">
              {% for link in section.settings.menu1.links %}
                <li class="footer__menu-item">
                  <a href="{{ link.url }}">{{ link.title }}</a>
                </li>
              {% endfor %}
            </ul>
          {% endif %}
        </div>
        <div class="footer__menu">
          {% if section.settings.menu2_title != blank %}
            <h4 class="text-base font-medium uppercase text-secondary">{{ section.settings.menu2_title | escape }}</h4>
          {% endif %}
          {% if section.settings.menu2 and section.settings.menu2.links.size > 0 %}
            <ul class="footer__menu-list">
              {% for link in section.settings.menu2.links %}
                <li class="footer__menu-item">
                  <a href="{{ link.url }}">{{ link.title }}</a>
                </li>
              {% endfor %}
            </ul>
          {% endif %}
        </div>
      </div>
    </div>
    <div class="footer__newsletter">
      <div
        class="newsletter-card"
        style="
          {% if section.settings.newsletter_bg_color != blank %}
            background-color: {{ section.settings.newsletter_bg_color }};
          {% endif %}
        "
      >
        {% if section.settings.newsletter_bg_image != blank %}
          <div class="newsletter-card__bg-image">
            {{
              section.settings.newsletter_bg_image
              | image_url: width: 600
              | image_tag: alt: 'Newsletter background', loading: 'lazy'
            }}
          </div>
        {% endif %}
        <div class="newsletter-card__content">
          <div class="newsletter-card__header">
            <h4 class="newsletter-card__title text-white">
              {{ 'general.newsletter.title' | t | default: 'Newsletter' }}
            </h4>
            {% if section.settings.newsletter_description != blank %}
              <p class="newsletter-card__description text-white">
                {{ section.settings.newsletter_description }}
              </p>
            {% endif %}
          </div>
          {% form 'customer' %}
            <input type="hidden" name="contact[tags]" value="newsletter">
            <div class="newsletter-card__controls">
              <input
                type="email"
                name="contact[email]"
                placeholder="{{ 'general.newsletter.placeholder' | t | default: 'Your email' }}"
                required
              >
              <button type="submit" aria-label="{{ 'general.newsletter.submit' | t | default: 'Subscribe' }}">
                <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M5 12H19M19 12L12 5M19 12L12 19" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </button>
            </div>
            {% if form.posted_successfully? %}
              <p class="newsletter-card__success">
                {{ 'general.newsletter.success' | t | default: 'Thanks for subscribing!' }}
              </p>
            {% endif %}
            {% if form.errors %}
              <p class="newsletter-card__error">{{ form.errors | default_errors }}</p>
            {% endif %}
          {% endform %}
        </div>
      </div>
    </div>
  </div>

  <div class="footer__bottom container">
    <div class="footer__social">
      <a href="{{ section.settings.social_1 }}" aria-label="Facebook" class="footer__social-icon text-secondary">
        {{ 'icon-facebook.svg' | inline_asset_content }}
      </a>
      <a href="{{ section.settings.social_2 }}" aria-label="Instagram" class="footer__social-icon text-secondary">
        {{ 'icon-instagram.svg' | inline_asset_content }}
      </a>
      <a href="{{ section.settings.social_3 }}" aria-label="TikTok" class="footer__social-icon text-secondary">
        {{ 'icon-tiktok.svg' | inline_asset_content }}
      </a>

      {% if section.settings.bottom_menu %}
        <div class="footer__bottom-menu text-secondary text-sm">
          {% for link in section.settings.bottom_menu.links %}
            {{ link.title | link_to: link.url }}
          {% endfor %}
        </div>
      {% endif %}
    </div>
    <div class="footer__copyright">&copy; {{ 'now' | date: '%Y' }}</div>
  </div>
</footer>

{% stylesheet %}
  footer {
    display: grid;
    gap: 2rem;
    margin-top: 2rem;
    min-height: 400px;
  }

  .footer__top {
    display: flex;
    gap: 2rem;
    align-items: flex-start;
    justify-content: space-between;
  }
  .footer__left {
    display: flex;
    gap: 2rem;
    flex: 1 1 auto;
    align-items: flex-start;
  }
  .footer__logo {
    font-weight: 600;
  }
  .footer__menus {
    display: flex;
    flex-direction: row;
    gap: 4rem;
  }

  .footer__menu-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    margin-top: 0.75rem;
  }

  .footer__menu-item a {
    text-decoration: none;
    color: var(--color-foreground);
  }
  .footer__newsletter {
    flex: 0 0 360px;
    max-width: 100%;
  }
  .newsletter-card {
    border: 1px solid var(--color-border, #e5e5e5);
    border-radius: 8px;
    padding: 1rem;
    position: relative;
    overflow: hidden;
  }
  .newsletter-card__bg-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
    -webkit-mask-image: linear-gradient(to bottom, rgba(0, 0, 0, 0), rgba(0, 0, 0, 1));
    -webkit-mask-repeat: no-repeat;
    -webkit-mask-size: 100% 100%;
    mask-image: linear-gradient(to bottom, rgba(0, 0, 0, 0), rgba(0, 0, 0, 1));
    mask-repeat: no-repeat;
    mask-size: 100% 100%;
  }
  .newsletter-card__bg-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .newsletter-card__content {
    position: relative;
    z-index: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: start;
    width: 100%;
    min-height: 160px;
    gap: 1rem;
  }
  .newsletter-card__header {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }
  .newsletter-card__title {
    margin: 0;
    font-size: 1rem;
  }
  .newsletter-card__description {
    margin: 0;
    font-size: 0.875rem;
    opacity: 0.9;
  }
  .newsletter-card__controls {
    display: flex;
    gap: 0.5rem;
    background: #000;
    border-radius: 50px;
    padding: 4px;
    align-items: center;
  }
  .newsletter-card input[type='email'] {
    flex: 1 1 auto;
    padding: 0.75rem 1rem;
    border: none;
    border-radius: 50px;
    background: transparent;
    color: #fff;
    outline: none;
  }
  .newsletter-card input[type='email']::placeholder {
    color: rgba(255, 255, 255, 0.7);
  }
  .newsletter-card button[type='submit'] {
    padding: 0.75rem;
    border: none;
    border-radius: 50%;
    background: #fff;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    min-width: 40px;
  }
  .newsletter-card button[type='submit']:hover {
    background: #f5f5f5;
  }
  .newsletter-card button[type='submit'] svg {
    width: 16px;
    height: 16px;
    color: #000;
  }
  .footer__bottom {
    display: grid;
    grid-template-columns: 1fr auto;
    align-items: center;
    gap: 1rem;
  }
  .footer__social {
    display: flex;
    gap: 0.75rem;
    align-items: center;
    flex-wrap: wrap;
  }
  .footer__social-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 20px;
    height: 20px;
  }
  .footer__bottom-menu {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    margin-left: 1rem;
  }
  .footer__bottom-menu a {
    text-decoration: none;
    color: var(--color-foreground);
  }
  .footer__payment {
    display: inline-flex;
    gap: 0.5rem;
    margin-left: 1rem;
    vertical-align: middle;
  }
  .footer__copyright {
    justify-self: end;
    text-align: right;
    display: flex;
    align-items: center;
    gap: 1rem;
  }
  @container (max-width: 800px) {
    .footer__top {
      flex-direction: column;
    }
    .footer__menus {
      grid-template-columns: 1fr;
    }
    .footer__bottom {
      grid-template-columns: 1fr;
      text-align: center;
    }
    .footer__social {
      justify-content: center;
    }
    .footer__bottom-menu {
      margin-left: 0;
      justify-content: center;
    }
    .footer__copyright {
      justify-self: center;
      text-align: center;
      flex-direction: column;
      gap: 0.5rem;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "t:general.footer",
  "settings": [
    { "type": "text", "id": "menu1_title", "label": "Menu 1 title" },
    { "type": "link_list", "id": "menu1", "label": "Menu 1" },
    { "type": "text", "id": "menu2_title", "label": "Menu 2 title" },
    { "type": "link_list", "id": "menu2", "label": "Menu 2" },
    { "type": "link_list", "id": "bottom_menu", "label": "Bottom menu" },
    { "type": "text", "id": "social_1", "label": "Social 1 (text)" },
    { "type": "text", "id": "social_2", "label": "Social 2 (text)" },
    { "type": "text", "id": "social_3", "label": "Social 3 (text)" },
    { "type": "checkbox", "id": "show_payment_icons", "label": "Show payment icons", "default": true },
    { "type": "image_picker", "id": "newsletter_bg_image", "label": "Newsletter card background image" },
    { "type": "color", "id": "newsletter_bg_color", "label": "Newsletter card background color" },
    { "type": "text", "id": "newsletter_description", "label": "Newsletter description" }
  ]
}
{% endschema %}
