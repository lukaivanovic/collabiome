<footer class="container flex flex-col gap-8 mt-24 mb-8">
  <div class="footer__top flex gap-8 items-start justify-between flex-wrap">
    <div class="footer__logo font-semibold order-1 p-2 mr-20">
      <a href="{{ routes.root_url }}" aria-label="{{ shop.name | escape }}">
        <img src="{{ 'logo.svg' | file_url }}" height="64" width="auto">
      </a>
    </div>

    <div class="footer__menus flex flex-row flex-1 gap-16 order-2">
      <div class="footer__menu">
        {% if section.settings.menu1_title != blank %}
          <h4 class="text-base font-medium uppercase text-secondary">{{ section.settings.menu1_title | escape }}</h4>
        {% endif %}
        {% if section.settings.menu1 and section.settings.menu1.links.size > 0 %}
          <ul class="footer__menu-list list-none p-0 m-0 flex flex-col gap-3 mt-3">
            {% for link in section.settings.menu1.links %}
              <li class="footer__menu-item">
                <a href="{{ link.url }}" class="no-underline">{{ link.title }}</a>
              </li>
            {% endfor %}
          </ul>
        {% endif %}
      </div>
      <div class="footer__menu">
        {% if section.settings.menu2_title != blank %}
          <h4 class="text-base font-medium uppercase text-secondary">{{ section.settings.menu2_title | escape }}</h4>
        {% endif %}
        {% if section.settings.menu2 and section.settings.menu2.links.size > 0 %}
          <ul class="footer__menu-list list-none p-0 m-0 flex flex-col gap-3 mt-3">
            {% for link in section.settings.menu2.links %}
              <li class="footer__menu-item">
                <a href="{{ link.url }}" class="no-underline">{{ link.title }}</a>
              </li>
            {% endfor %}
          </ul>
        {% endif %}
      </div>
    </div>

    <div class="footer__newsletter">
      <div
        class="newsletter-card"
        style="
          {% if section.settings.newsletter_bg_color != blank %}
            background-color: {{ section.settings.newsletter_bg_color }};
          {% endif %}
        "
      >
        {% if section.settings.newsletter_bg_image != blank %}
          <div class="newsletter-card__bg-image">
            {{
              section.settings.newsletter_bg_image
              | image_url: width: 600
              | image_tag: alt: 'Newsletter background', loading: 'lazy'
            }}
          </div>
        {% endif %}
        <div class="newsletter-card__content">
          <div class="newsletter-card__header">
            <h4 class="text-large text-white uppercase">
              {{ 'general.newsletter.title' | t | default: 'Newsletter' }}
            </h4>
            {% if section.settings.newsletter_description != blank %}
              <p class="text-base text-white">
                {{ section.settings.newsletter_description }}
              </p>
            {% endif %}
          </div>
          {% form 'customer' %}
            <input type="hidden" name="contact[tags]" value="newsletter">
            <div class="newsletter-card__controls">
              <input
                type="email"
                name="contact[email]"
                placeholder="{{ 'general.newsletter.placeholder' | t | default: 'Your email' }}"
                required
              >
              <button type="submit" aria-label="{{ 'general.newsletter.submit' | t | default: 'Subscribe' }}">
                <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M5 12H19M19 12L12 5M19 12L12 19" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </button>
            </div>
            {% if form.posted_successfully? %}
              <p class="newsletter-card__success">
                {{ 'general.newsletter.success' | t | default: 'Thanks for subscribing!' }}
              </p>
            {% endif %}
            {% if form.errors %}
              <p class="newsletter-card__error">{{ form.errors | default_errors }}</p>
            {% endif %}
          {% endform %}
        </div>
      </div>
    </div>
  </div>

  <div class="footer__bottom ">
    <div class="footer__bottom-left">
      <div class="footer__social">
        <a href="{{ section.settings.social_1 }}" aria-label="Facebook" class="footer__social-icon text-secondary">
          {{ 'icon-facebook.svg' | inline_asset_content }}
        </a>
        <a href="{{ section.settings.social_2 }}" aria-label="Instagram" class="footer__social-icon text-secondary">
          {{ 'icon-instagram.svg' | inline_asset_content }}
        </a>
        <a href="{{ section.settings.social_3 }}" aria-label="TikTok" class="footer__social-icon text-secondary">
          {{ 'icon-tiktok.svg' | inline_asset_content }}
        </a>
      </div>
      {% if section.settings.bottom_menu %}
        <div class="footer__bottom-menu text-secondary text-sm">
          {% for link in section.settings.bottom_menu.links %}
            {{ link.title | link_to: link.url }}
          {% endfor %}
        </div>
      {% endif %}
    </div>
    <div class="footer__copyright text-secondary text-sm">Collabiome &copy; {{ 'now' | date: '%Y' }}</div>
  </div>
</footer>

{% stylesheet %}
  footer {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    margin-top: 6rem;
    margin-bottom: 2rem;
  }
  .footer__top {
    display: flex;
    gap: 2rem;
    align-items: flex-start;
    justify-content: space-between;
  }
  .footer__left {
    display: flex;
    gap: 2rem;
    flex: 1 1 auto;
    align-items: flex-start;
  }
  .footer__logo {
    font-weight: 600;
    order: 1;
    padding: 0.5rem;
    margin-right: 5rem;
  }
  .footer__menus {
    display: flex;
    flex-direction: row;
    flex: 1 1 auto;
    gap: 4rem;
    order: 2;
  }
  .footer__menu-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    margin-top: 0.75rem;
  }
  .footer__menu-item a {
    text-decoration: none;
    color: var(--color-foreground);
  }
  .footer__newsletter {
    flex: 0 0 440px;
    order: 3;
  }
  .footer__newsletter form {
    width: 100%;
  }
  .newsletter-card__bg-image {
    -webkit-mask-image: linear-gradient(to bottom, rgba(0, 0, 0, 0) 20%, rgba(0, 0, 0, 1) 100%);
    -webkit-mask-repeat: no-repeat;
    -webkit-mask-size: 100% 100%;
    mask-image: linear-gradient(to bottom, rgba(0, 0, 0, 0) 20%, rgba(0, 0, 0, 1) 100%);
    mask-repeat: no-repeat;
    mask-size: 100% 100%;
  }
  @media (max-width: 800px) {
    .footer__top {
      flex-direction: column;
    }
    .footer__bottom {
      flex-direction: column;
      align-items: flex-start;
      gap: 1.5rem;
    }
    .footer__bottom-left {
      flex-direction: column;
      justify-content: flex-start;
      align-items: start;
    }
    .footer__newsletter {
      width: 100%;
      flex: 0 0 auto;
      order: 1;
    }
    .footer__bottom-menu {
      margin-left: 0;
      flex-direction: column;
      gap: 0.5rem;
    }
    .footer__copyright {
      text-align: left;
      align-self: flex-start;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "t:general.footer",
  "settings": [
    { "type": "text", "id": "menu1_title", "label": "Menu 1 title" },
    { "type": "link_list", "id": "menu1", "label": "Menu 1" },
    { "type": "text", "id": "menu2_title", "label": "Menu 2 title" },
    { "type": "link_list", "id": "menu2", "label": "Menu 2" },
    { "type": "link_list", "id": "bottom_menu", "label": "Bottom menu" },
    { "type": "text", "id": "social_1", "label": "Social 1 (text)" },
    { "type": "text", "id": "social_2", "label": "Social 2 (text)" },
    { "type": "text", "id": "social_3", "label": "Social 3 (text)" },
    { "type": "checkbox", "id": "show_payment_icons", "label": "Show payment icons", "default": true },
    { "type": "image_picker", "id": "newsletter_bg_image", "label": "Newsletter card background image" },
    { "type": "color", "id": "newsletter_bg_color", "label": "Newsletter card background color" },
    { "type": "text", "id": "newsletter_description", "label": "Newsletter description" }
  ]
}
{% endschema %}
