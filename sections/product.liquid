    flex-direction: column;
    gap: 16px;
  }

  .product-form__option {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .option-label {
    font-weight: 500;
    font-size: 14px;
    color: #333;
  }

  .option-values {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

