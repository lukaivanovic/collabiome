    left: 16px;
  }

  .product-carousel__nav--next {
    right: 16px;
  }

  .product-carousel__nav:hover:not(:disabled) {
    background: #fff;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
  }

  .product-carousel__nav:disabled {
