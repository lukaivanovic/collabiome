    display: flex;
    align-items: center;
    gap: 12px;
  }

  .product-price {
    font-size: 24px;
    font-weight: 600;
    color: #000;
  }

  .product-price-compare {
    font-size: 20px;
    color: #999;
    text-decoration: line-through;
  }

  .product-form {
    display: flex;
    flex-direction: column;
    gap: 20px;
    margin-top: 20px;
  }

  .product-form__variants {
