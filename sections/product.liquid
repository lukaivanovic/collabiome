    text-decoration: none;
    padding: 0.75rem 1rem;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: fit-content;
    font-weight: 500;
    font-family: 'Geist', sans-serif;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    font-size: 15px;
    border: none;
    cursor: pointer;
  }

