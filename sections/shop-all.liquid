{% liquid
  assign section_id = section.settings.custom_id | default: section.id
  assign products_per_page = section.settings.products_per_page | default: 24

  if section.settings.collection != blank
    assign selected_collection = collections[section.settings.collection]
    assign collection_products = selected_collection.products
    assign total_products = selected_collection.products_count
  else
    assign collection_products = collections.all.products
    assign total_products = collections.all.products_count
  endif
%}

<div class="container mx-auto max-w-7xl px-4 py-8 md:py-16">
  {% if section.settings.title != blank %}
    <div class="text-center mb-12">
      <h1 class="text-3xl uppercase mb-2">{{ selected_collection.title }}</h1>
      <p class="text-sm opacity-75">
        {{ total_products }}
        Products
      </p>
    </div>
  {% endif %}

  <div class="grid grid-cols-[repeat(auto-fill,minmax(200px,1fr))] sm:grid-cols-[repeat(auto-fill,minmax(240px,1fr))] md:grid-cols-[repeat(auto-fill,minmax(280px,1fr))] gap-4 sm:gap-6 md:gap-8 mb-12" data-section-id="{{ section_id }}">
    {% for product in collection_products limit: products_per_page %}
      {% render 'product-card', product: product %}
    {% endfor %}
  </div>

  {% if total_products > products_per_page %}
    <div class="text-center">
      <button class="px-8 py-3 bg-background text-foreground border border-border rounded cursor-pointer text-sm transition-all duration-200 hover:bg-foreground hover:text-background" data-products-per-page="{{ products_per_page }}">
        Load more products
      </button>
    </div>
  {% endif %}
</div>

{% stylesheet %}
  .product-card {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    color: var(--color-foreground, #000);
    text-decoration: none;
    border-radius: 8px;
    overflow: hidden;
    height: 100%;
  }

  .product-card__media {
    position: relative;
    aspect-ratio: 3 / 4;
    width: 100%;
    overflow: hidden;
    border-radius: 8px;
  }

  .product-card__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .product-card__placeholder {
    width: 100%;
    height: 100%;
    background: linear-gradient(180deg, rgb(0 0 0 / 0.04), rgb(0 0 0 / 0.12));
  }

  .product-card__content {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    padding: 0 0.5rem 0.5rem;
  }

  .product-card__title {
    line-height: 1.4;
    margin-bottom: 0.25rem;
  }

  .product-card__price {
    font-variant-numeric: tabular-nums;
    font-weight: 600;
    color: var(--color-foreground, #000);
  }

  .product-card__compare-price {
    font-variant-numeric: tabular-nums;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Shop All",
  "class": "shop-all__section",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Page Title",
      "default": "Shop All Products"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection",
      "info": "Select a collection to display. Leave empty to show all products."
    },
    {
      "type": "range",
      "id": "products_per_page",
      "label": "Products per page",
      "min": 12,
      "max": 48,
      "step": 6,
      "default": 24
    },
    {
      "type": "checkbox",
      "id": "show_filters",
      "label": "Show filters",
      "default": false
    }
  ],
  "presets": [
    {
      "name": "Shop All",
      "category": "Collection"
    }
  ]
}
{% endschema %}
