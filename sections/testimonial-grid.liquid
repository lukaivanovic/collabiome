<section class="testimonial-grid">
  <div class="container">
    <div class="py-6 flex flex-col gap-4">
      {% if section.settings.title != blank %}
        <h2 class="text-center">{{ section.settings.title | escape }}</h2>
        {% if section.settings.description != blank %}
          <p class="text-secondary text-center">{{ section.settings.description | escape }}</p>
        {% endif %}
      {% endif %}
    </div>

    <div class="testimonial-grid__grid pt-16">
      {% liquid
        assign entries = null
        if metaobjects and metaobjects.testimonial_text and metaobjects.testimonial_text.values
          assign entries = metaobjects.testimonial_text.values
        endif

        assign videos = entries | where: 'type', 'video'
        assign texts = entries | where: 'type', 'simple'

        assign v_total = videos | size
        assign t_total = texts | size

        if v_total > 0
          assign max = v_total | minus: 1
          assign diff = max | plus: 1
          assign v_result = 'now' | date: '%N' | modulo: diff
        endif

        if t_total > 0
          assign max = t_total | minus: 1
          assign diff = max | plus: 1
          assign t_result = 'now' | date: '%N' | modulo: diff
        endif

        assign v1 = videos[0]
        assign v2 = videos[1]
        assign v3 = videos[2]
        assign v4 = videos[3]
        assign t1 = texts[0]
        assign t2 = texts[1]
        assign t3 = texts[2]
      %}

      <div class="testimonial-grid__column">
        {% render 'testimonial-card-video', entry: v1 %}
        <article class="testimonial-grid__item bg-green">
          {% render 'testimonial-card-text', entry: t1 %}
        </article>
      </div>

      <div class="testimonial-grid__column">
        <article class="testimonial-grid__item bg-pink">
          {% render 'testimonial-card-text', entry: t2 %}
        </article>
        {% render 'testimonial-card-video', entry: v2 %}
      </div>

      <div class="testimonial-grid__column">
        {% render 'testimonial-card-video', entry: v4 %}
        <article class="testimonial-grid__item bg-green">
          {% render 'testimonial-card-text', entry: t2 %}
        </article>
      </div>

      <div class="testimonial-grid__column">
        <article class="testimonial-grid__item bg-blue">
          {% render 'testimonial-card-text', entry: t3 %}
        </article>
        {% render 'testimonial-card-video', entry: v3 %}
      </div>
    </div>
  </div>
</section>

{% stylesheet %}
  .testimonial-grid {
    padding-top: 120px;
    padding-bottom: 120px;
    --product-background: var(--color-gradient1);
  }

  .testimonial-grid__title {
    margin: 0 0 1.5rem 0;
    font-size: 1.5rem;
    line-height: 1.2;
    font-weight: 700;
    text-align: center;
  }

  .testimonial-grid__grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 2rem;
  }

  .testimonial-grid__column {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    align-items: start;
  }

  .testimonial-grid__grid > *:nth-child(1) {
    --product-background: var(--color-gradient2);
  }

  .testimonial-grid__grid > *:nth-child(2) {
    --product-background: var(--color-gradient3);
  }

  .testimonial-grid__item {
    position: relative;
    border-radius: 12px;
    padding: 1.5rem;
    color: color-mix(in srgb, black 88%, transparent);
  }

  .testimonial-grid__item-video {
    width: 100%;
    position: relative;
  }

  .testimonial-grid__meta {
    display: flex;
    gap: 0.5rem;
    align-items: baseline;
    margin-top: 1rem;
  }

  .testimonial-grid__press {
    display: flex;
    gap: 0.75rem;
    align-items: center;
  }

  .testimonial-grid__outlet {
    font-weight: 600;
  }

  /* 9/16 video container */
  .testimonial-grid__media {
    aspect-ratio: 9 / 16;
    width: 100%;
    overflow: hidden;
    border-radius: var(--style-border-radius-cards, 12px);
  }
  .testimonial-grid__media video,
  .testimonial-grid__media iframe {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  /* Product badge pinned to bottom */
  .testimonial-grid__product {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    bottom: -1rem;
    display: flex;
    justify-content: center;
    align-items: center;
    background: var(--product-background);
    color: var(--color-foreground-default);
    padding: 0.5rem 0.5rem;
    border-radius: 999px;
    text-decoration: none;
    gap: 1rem;
    min-width: 180px;
  }

  .testimonial-grid__product img {
    width: 32px;
    height: 32px;
    border-radius: 8px;
    object-fit: cover;
    display: block;
  }

  @media (max-width: 600px) {
    .testimonial-grid__grid {
      grid-template-columns: 1fr;
    }

    .testimonial-grid__grid > *:nth-child(2) {
      flex-direction: column-reverse;
    }

    .testimonial-grid__grid > *:nth-child(4) {
      display: none;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Testimonial grid",
  "tag": "section",
  "class": "testimonial-grid-section",
  "settings": [
    { "type": "text", "id": "title", "label": "Text", "default": "Testimonial grid" },
    { "type": "textarea", "id": "description", "label": "Description", "default": "Describe this category" }
  ],
  "blocks": [
    {
      "type": "text_testimonial",
      "name": "Text testimonial",
      "settings": [
        { "type": "richtext", "id": "quote", "label": "Text" },
        { "type": "text", "id": "author", "label": "Author" },
        { "type": "text", "id": "role", "label": "Role" }
      ]
    },
    {
      "type": "press_testimonial",
      "name": "Press testimonial",
      "settings": [
        { "type": "richtext", "id": "quote", "label": "Text" },
        { "type": "image_picker", "id": "logo", "label": "Logo" },
        { "type": "text", "id": "outlet", "label": "  Text" },
        { "type": "url", "id": "link", "label": "Link URL" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Testimonial grid",
      "blocks": [{ "type": "text_testimonial" }, { "type": "press_testimonial" }]
    }
  ]
}
{% endschema %}
